<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/INDIGO_A100"
    tools:context=".paid.MainActivity">

    <TextView
        android:id="@+id/app_title"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/app_title_text"
        style="@style/commonTextStyle"/>

    <Button
        style="@style/Base.Widget.AppCompat.Button"
        android:layout_marginTop="48dp"
        android:layout_gravity="center|center_horizontal"
        android:text="Make me laugh!"
        android:id="@+id/joke_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_title"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/test_result_text"
        android:layout_below="@+id/joke_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

    <ProgressBar
        android:id="@+id/prog_bar_paid"
        android:progress="0"
        android:layout_below="@id/test_result_text"
        android:layout_marginTop="20dp"
        android:layout_width="20dp"
        android:layout_marginLeft="180dp"
        android:layout_marginStart="180dp"
        android:layout_height="20dp"/>

</RelativeLayout>
